<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout.OutlinedBox.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="TextInputLayout.OutlinedBox.Focused" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Button.CustomOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item> <!-- 테두리 색상을 변경 -->
        <item name="strokeWidth">2dp</item> <!-- 테두리 굵기를 변경 -->
    </style>

    <!--bottomsheet style -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundedBottomSheetShapeStyle</item>
    </style>

    <style name="RoundedBottomSheetShapeStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>